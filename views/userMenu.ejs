                <p>Taro Milk Tea with Captain Morgan Spiced Rum</p>
            </div>
            <h5>More To COme!</h5>
        </section> -->
       
        <button type="submit" id="addOrder">Add to Order</button>
        
    </form>
    </section>

    <section class="orderCart">
        <%for(let i=0; i < bobaDB.length; i++) { %>
           
        <section id="<%= bobaDB[i]._id%>"">
            <span>Size:</span>
            <p><%= bobaDB[i].size %></p>
            <span>Drink:</span>
            <p><%= bobaDB[i].drink %></p>
            <span>Toppings:</span>
            <p><%= bobaDB[i].toppings %></p>
            <span>Sugar:</span>
            <p><%= bobaDB[i].sugar %></p>
            <span>Ice:</span>
            <p><%= bobaDB[i].ice %></p>
            <span>Price:</span>
            <p><%= bobaDB[i].price %></p>
            <span><i class="fa-solid fa-square-xmark"></i></span>
        </section>
        <% } %>

            <a href="/checkout"><button id="orderComplete">Complete Order</button></a>
       
    </section>

